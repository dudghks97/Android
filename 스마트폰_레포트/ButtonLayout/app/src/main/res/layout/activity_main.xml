<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <!-- 외부 LinearLayout 1개, 내부 LinearLayout 3개로 구현하였음 -->
    <!-- 가중치(weight)와 그래비티(gravity)를 통하여 각 레이아웃의 위치를 조정하였음 -->
    <!-- 각 레이아웃의 높이(height)를 0dp로 설정하였음 -->
    <!-- 외부 레이아웃의 orientation을 vertical로 설정하여 수직으로 배열되게 하였음 -->

    <!-- 버튼 1,2 레이아웃 -->
    <!-- 수직으로 배열되어야 하므로, orientation을 vertical로 설정하였음 -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical">

        <!-- 버튼의 너비와 높이는 모두 wrap_content로 설정하였음 -->
        <!-- 각 버튼의 id 와 text에만 차이가 존재하므로 이후 주석 생략 -->
        <Button
            android:id="@+id/button1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="버튼1" />

        <Button
            android:id="@+id/button2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="버튼2" />
    </LinearLayout>

    <!-- 버튼 3,4 레이아웃 -->
    <!-- 수평으로 배열되어야 하므로, orientaion을 horizontal로 설정하였음 -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="horizontal"
        >

        <Button
            android:id="@+id/button3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="버튼3"
            />

        <Button
            android:id="@+id/button4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="버튼4"
            />
    </LinearLayout>

    <!-- 버튼 5,6 -->
    <!-- 수직으로 배열되어야 하므로, orientation을 vertical로 설정하였음 -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:gravity="center"
        >

        <Button
            android:id="@+id/button5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="버튼5"
            />

        <Button
            android:id="@+id/button6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="버튼6"
            />
    </LinearLayout>

</LinearLayout>